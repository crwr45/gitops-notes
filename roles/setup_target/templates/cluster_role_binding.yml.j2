apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: "{{ cluster_role_binding_name }}"
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: "{{ cluster_role_name }}"
subjects:
- kind: ServiceAccount
  name: "{{ service_account_name }}"
  namespace: "{{ target_namespace }}"
